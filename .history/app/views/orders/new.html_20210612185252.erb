<%= render 'shared/header' %>

<div class="baby-form-aria">
  <p class="title baby-text">赤ちゃんのことを教えてください</p>
  <div class="baby-form">
    <div class="baby-data">
      <%= form_with(model: @order, url: orders_path, local: true) do |f| %>
      <%= render "devise/shared/error_messages", resource: @order %>

      <div class="field">
        <%= f.label :k_name, 'おなまえ（漢字）', class: 'form-label' %><br />
        <%= f.text_field :k_name, autofocus: true, placeholder: "太郎" %>
      </div>

      <div class="field">
        <%= f.label :r_name, 'おなまえ（ローマ字）', class: 'form-label' %><br />
        <%= f.text_field :r_name, placeholder: "tarou" %>
      </div>

      <div class="field">
        <%= f.label :birthday, 'お誕生日', class: 'form-label' %><br />
        <%= f.date_field :birthday, placeholder: "こちらをクリック" %>
      </div>

      <div class="field">
        <%= f.label :height, '誕生時の身長' , class: 'form-label' %><br />
        <%= f.number_field :height, min: 30, max: 70 %>
      </div>

      <div class="field">
        <%= f.submit "次に進む" %>
      </div>
      <% end %>
    </div>
  </div>
</div>